<?xml version="1.0" encoding="UTF-8" ?>
<messages>
    <message id="fortunes">
        <html>
            <head>
                <title>Fortunes</title>
            </head>
            <body>
                <table>
                    <tr>
                        <th>id</th>
                        <th>message</th>
                    </tr>
                    ${while:next-fortune fortune-table-row}
                </table>
            </body>
        </html>
    </message>

    <message id="fortune-table-row">
        <tr>
            <td>${id}</td>
            <td>${message}</td>
        </tr>
    </message>
</messages>
