source 'https://rubygems.org'

gem 'json', '~> 2.8'
gem 'sequel', '~> 5.0'
gem 'sinatra', '~> 4.0', require: 'sinatra/base'

group :mysql, optional: true do
  gem 'trilogy', '~> 2.10'
end

group :postgresql, optional: true do
  gem 'pg', '~> 1.5'
  gem 'sequel_pg', '~> 1.17', require: 'sequel'
end

group :iodine, optional: true do
  gem 'iodine', '~> 0.7', require: false
end

group :puma, optional: true do
  gem 'puma', '~> 7.1', require: false
  gem 'concurrent-ruby' # used by Puma for auto-tuning
end
