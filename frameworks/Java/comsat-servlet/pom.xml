<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.techempower</groupId>
	<artifactId>comsat-servlet</artifactId>
	<version>0.1</version>

	<repositories>
		<repository>
			<id>snapshots-repo</id>
			<url>https://oss.sonatype.org/content/repositories/snapshots</url>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

		<jackson.version>2.5.4</jackson.version>
		<quasar.version>0.7.3</quasar.version>
		<comsat.version>0.5.0</comsat.version>
	</properties>

	<dependencies>
		<!-- Jackson JSON -->
		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-databind</artifactId>
			<version>${jackson.version}</version>
		</dependency>

		<!-- Quasar fibers -->
		<dependency>
			<groupId>co.paralleluniverse</groupId>
			<artifactId>quasar-core</artifactId>
			<version>${quasar.version}</version>
			<classifier>jdk8</classifier>
		</dependency>

		<!-- Web servers -->
		<dependency>
			<groupId>co.paralleluniverse</groupId>
			<artifactId>comsat-test-utils</artifactId>
			<version>${comsat.version}</version>
		</dependency>

		<!-- 'comsat-servlet' integration -->
		<dependency>
			<groupId>co.paralleluniverse</groupId>
			<artifactId>comsat-servlet</artifactId>
			<version>${comsat.version}</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<inherited>true</inherited>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
					<optimize>true</optimize>
					<debug>false</debug>
				</configuration>
			</plugin>

			<plugin>
				<groupId>com.github.chrischristo</groupId>
				<artifactId>capsule-maven-plugin</artifactId>
				<version>0.10.4</version>
				<executions>
					<execution>
						<goals>
							<goal>build</goal>
						</goals>
						<configuration>
							<appClass>hello.HelloWebServer</appClass>

							<types>fat</types>

							<properties>
								<property>
									<key>serverClass</key>
									<value>co.paralleluniverse.embedded.containers.UndertowServer</value>
								</property>
								<property>
									<key>co.paralleluniverse.fibers.detectRunawayFibers</key>
									<value>false</value>
								</property>
							</properties>

							<manifest>
								<entry>
									<key>Java-Agents</key>
									<value>quasar-core-${quasar.version}-jdk8.jar</value>
								</entry>
								<entry>
									<key>Min-Java-Version</key>
									<value>1.8.0</value>
								</entry>
							</manifest>

							<modes>
								<mode>
									<name>jetty</name>

									<properties>
										<property>
											<key>serverClass</key>
											<value>co.paralleluniverse.embedded.containers.JettyServer</value>
										</property>
									</properties>
								</mode>
								<mode>
									<name>tomcat</name>

									<properties>
										<property>
											<key>serverClass</key>
											<value>co.paralleluniverse.embedded.containers.TomcatServer</value>
										</property>
										<property>
											<key>co.paralleluniverse.embedded.containers.TomcatServer.defaultResDir
											</key>
											<value>.</value>
										</property>
									</properties>
								</mode>
							</modes>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
