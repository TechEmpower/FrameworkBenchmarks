<configuration>
	<logger name="org.mongodb" level="FATAL"/>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{dd.MM.yyyy;HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>
	<root level="FATAL">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>